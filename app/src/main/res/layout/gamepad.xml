<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gamepad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:backgroundTint="#FF0000"
    android:padding="@dimen/key_padding">
    <!-- android:layout_gravity="bottom"-->

    <Button
        android:id="@+id/keypad_left"
        android:layout_width="@dimen/key_width"
        android:layout_height="@dimen/key_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/key_margin"
        android:background="@drawable/circle_left"
        android:backgroundTint="#FF0000" />

    <Button
        android:id="@+id/keypad_right"
        android:layout_width="@dimen/key_width"
        android:layout_height="@dimen/key_height"
        android:layout_marginStart="@dimen/key_margin"
        android:layout_toEndOf="@+id/keypad_left"
        android:background="@drawable/circle_right"
        android:backgroundTint="#FF0000" />

    <Button
        android:id="@+id/keypad_boost"
        android:layout_width="@dimen/key_width"
        android:layout_height="@dimen/key_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/key_margin"
        android:background="@drawable/ic_flight_24px"
        android:backgroundTint="#021BFA" />

    <Button
        android:id="@+id/keypad_laser"
        android:layout_width="@dimen/key_width"
        android:layout_height="@dimen/key_height"
        android:layout_marginEnd="@dimen/key_margin"
        android:layout_toStartOf="@+id/keypad_boost"
        android:background="@drawable/fire"
        android:backgroundTint="#F85700" />

    <Button
        android:id="@+id/keypad_teleport"
        android:layout_width="@dimen/key_width"
        android:layout_height="@dimen/key_height"
        android:layout_marginEnd="@dimen/key_margin"
        android:layout_toStartOf="@+id/keypad_laser"
        android:background="@drawable/teleport"
        android:backgroundTint="#11F601" />
</RelativeLayout>
